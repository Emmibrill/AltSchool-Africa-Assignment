<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo Dashboard</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <main class="container">
    <nav class="top-bar">
      <h2>My Todos</h2>
      <form method="POST" action="/logout">
        <button class="secondary-btn">Logout</button>
      </form>
    </nav>

    <section class="todo-input">
      <form method="POST" action="/todos">
        <input
          type="text"
          name="title"
          placeholder="What needs to be done?"
          required
        />
        <button>Add Task</button>
      </form>
    </section>

    <section class="todo-list">
      <% if (todos.length === 0) { %>
        <div class="empty">
          Youâ€™re all caught up. Add a task to get started.
        </div>
      <% } %>

      <% todos.forEach(todo => { %>
        <div class="todo-item">
          <div class="todo-main">
            <strong><%= todo.title %></strong>
            <span class="status <%= todo.status %>">
              <%= todo.status %>
            </span>
          </div>

          <div class="todo-actions">
            <form method="POST" action="/todos/<%= todo.id %>/status">
              <select name="status" onchange="this.form.submit()">
                <option value="pending" <%= todo.status === 'pending' ? 'selected' : '' %>>
                  Pending
                </option>
                <option value="completed" <%= todo.status === 'completed' ? 'selected' : '' %>>
                  Completed
                </option>
              </select>
            </form>

            <form method="POST" action="/todos/<%= todo.id %>/delete">
              <button class="delete-btn" type="submit" onclick="return confirm('Are you sure you want to delete this todo?');">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </section>
  </main>
</body>
</html>


  
